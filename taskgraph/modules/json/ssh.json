 [
  {
    "target": "ssh",
    "executable": "ssh",
    "command_line_arguments": "ssh -A -o -o StrictHostKeyChecking=accept-new {host}",
    "inputs": ["host"]
  },
  {
    "target": "update_ssh_key",
    "executable": "ssh-keyscan",
    "command_line_arguments": "{host} >> ~/.ssh/known_hosts",
    "inputs": ["host"]
  },
  {
    "target": "remove_ssh_key",
    "executable": "ssh-keygen",
    "command_line_arguments": "-f ~/.ssh/known_hosts -R {host}",
    "inputs": ["host"]
  }
]
